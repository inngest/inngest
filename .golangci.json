{
  "version": "2",
  "run": {
    "timeout": "10m"
  },
  "linters": {
    "exclusions": {
      "paths": [
        "vendor"
      ],
      "presets": [
        "comments",
        "std-error-handling"
      ]
    },
    "settings": {
      "staticcheck": {
        "checks": [
          "all",
          "-ST1003",
          "-ST1005",
          "-SA1019",
          "-QF1008"
        ]
      }
    }
  },
  "formatters": {
    "exclusions": {
      "paths": [
        "vendor"
      ]
    }
  }
}
