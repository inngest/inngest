{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false, // TODO: remove (default is true)
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": false, // TODO: set to true
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "./dist/types/**/*.ts",
    "./next.config.js",
    "./tailwind.config.cjs"
  ],
  "exclude": ["node_modules"]
}
