{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "display": "Next.js",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "./src/**/*",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "./next.config.js",
    "./tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
