{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.js",
    "vite.config.js",
    "./graphql.config.ts",
    "./tailwind.config.ts"
  ],

  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,

    /* Linting */
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@inngest/components": ["../../packages/components/src"],
      "@inngest/components/*": ["../../packages/components/src/*"]
    }
  }
}
